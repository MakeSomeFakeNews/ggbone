.map-view {
  width: 100%;
  height: 100vh;
}

.ball {
  display: flex;
  flex-direction: row;
  width: 100rpx;
  height: 100rpx;
}

.side-bar-icon {
  width: 22rpx;
  height: 22rpx;
}
.side-bar {
  position: absolute;
  right: 10rpx;
  top: 50%;
  display: flex;
  align-items: center;
  z-index: 10;
  height: 50rpx;
}

.expand-button {
  margin-left: 10rpx;
}

.expanded-bar {
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.3);
}

.expanded-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10rpx;
}

.instrument {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  display: inline-block;
  overflow: hidden;
}

.instrument .box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.detail {
  position: fixed;
  right: 0;
  top: 12%;
  width: 36%;
  height: 82rpx;
  background-color: aquamarine;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-left: auto;
  margin-right: 20rpx;
  border-radius: 5%;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  background-clip: padding-box;
  overflow: scroll;
}

.detail-item {
  width: 42%;
  text-align: center;
  font-size: 12rpx;
  font-weight: bold;
  margin: 6rpx;
}
